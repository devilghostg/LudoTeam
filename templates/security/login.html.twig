{% extends 'base.html.twig' %}

{% block title %}Connexion - LudoTeam{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="text-center mb-4">
            <h1 class="h3">Bienvenue sur LudoTeam</h1>
            <p class="text-muted">Connectez-vous pour rejoindre la communauté</p>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-4">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, 
                            <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="email" 
                               class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input type="password" name="password" id="password" 
                               class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                            <label class="form-check-label" for="remember_me">
                                Se souvenir de moi
                            </label>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="submit">
                            Se connecter
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-0">Pas encore de compte ?</p>
                    <a href="{{ path('app_register') }}" class="btn btn-outline-primary mt-2">
                        Créer un compte
                    </a>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <p class="text-muted">
                Découvrez et partagez votre passion des jeux de société !
            </p>
        </div>
    </div>
</div>
{% endblock %}
