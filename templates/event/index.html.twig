{% extends 'base.html.twig' %}

{% block title %}Événements - LudoTeam{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .event-header {
            background: linear-gradient(135deg, #6B48FF 0%, #1E90FF 100%);
            padding: 60px 0;
            color: white;
            margin-bottom: 40px;
        }

        .event-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 30px;
            overflow: hidden;
            border: none;
        }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .event-date {
            background: linear-gradient(135deg, #6B48FF 0%, #1E90FF 100%);
            color: white;
            padding: 10px;
            text-align: center;
            font-weight: bold;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .event-info {
            padding: 20px;
        }

        .event-title {
            font-size: 1.4rem;
            margin-bottom: 15px;
            color: #333;
        }

        .event-meta {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

        .event-meta i {
            margin-right: 5px;
            color: #6B48FF;
        }

        .event-description {
            color: #555;
            margin-bottom: 20px;
        }

        .event-actions {
            padding: 15px 20px;
            background: #f8f9fa;
            border-top: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-delete:hover {
            background: #c82333;
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(220, 53, 69, 0.3);
            color: white;
        }

        .event-filter {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .filter-title {
            font-size: 1.2rem;
            margin-bottom: 15px;
            color: #333;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .empty-state i {
            font-size: 3rem;
            color: #6B48FF;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Header Section -->
    <section class="event-header full-width-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-4 mb-3">Événements</h1>
                    <p class="lead mb-0">Découvrez et rejoignez les prochaines soirées jeux !</p>
                </div>
                {% if is_granted('ROLE_USER') %}
                    <div class="col-md-4 text-md-end">
                        <a href="{{ path('app_event_new') }}" class="btn btn-create-event">
                            <i class="fas fa-plus-circle me-2"></i>Créer un événement
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <!-- Filtres -->
            <div class="col-md-3">
                <div class="event-filter">
                    <h4 class="filter-title">Filtres</h4>
                    <form method="get" action="{{ path('app_event_index') }}">
                        <!-- Date -->
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <select name="date_filter" class="form-select">
                                <option value="">Toutes les dates</option>
                                <option value="today">Aujourd'hui</option>
                                <option value="week">Cette semaine</option>
                                <option value="month">Ce mois</option>
                            </select>
                        </div>

                        <!-- Disponibilité -->
                        <div class="mb-3">
                            <label class="form-label">Disponibilité</label>
                            <select name="availability" class="form-select">
                                <option value="">Tous les événements</option>
                                <option value="available">Places disponibles</option>
                                <option value="full">Complet</option>
                            </select>
                        </div>

                        <!-- Jeux -->
                        <div class="mb-3">
                            <label class="form-label">Jeu</label>
                            <select name="game" class="form-select">
                                <option value="">Tous les jeux</option>
                                {% for game in games %}
                                    <option value="{{ game.id }}">{{ game.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter me-2"></i>Filtrer
                        </button>
                    </form>
                </div>
            </div>

            <!-- Liste des événements -->
            <div class="col-md-9">
                {% if events is empty %}
                    <div class="empty-state">
                        <i class="fas fa-calendar-times"></i>
                        <h3>Aucun événement pour le moment</h3>
                        <p>Soyez le premier à créer un événement !</p>
                    </div>
                {% else %}
                    <div class="row">
                        {% for event in events %}
                            <div class="col-md-6">
                                <div class="event-card">
                                    <div class="event-info">
                                        <div class="event-date">
                                            {{ event.date|date('d/m/Y H:i') }}
                                        </div>
                                        <h3 class="event-title">{{ event.name }}</h3>
                                        <div class="event-meta">
                                            <p>
                                                <i class="fas fa-user"></i> 
                                                {% if event.organizer %}
                                                    {{ event.organizer.email }}
                                                {% else %}
                                                    Utilisateur inconnu
                                                {% endif %}
                                            </p>
                                            <p>
                                                <i class="fas fa-users"></i> 
                                                {% if event.participants is defined %}
                                                    {{ event.participants|length }}
                                                {% else %}
                                                    0
                                                {% endif %}/{{ event.maxParticipants }} participants
                                            </p>
                                        </div>
                                        <div class="event-description">
                                            {{ event.description|slice(0, 150) ~ '...' }}
                                        </div>
                                    </div>
                                    <div class="event-actions">
                                        <div>
                                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary">
                                                <i class="fas fa-info-circle me-1"></i>Détails
                                            </a>
                                            {% if not event.isFull and is_granted('ROLE_USER') and app.user != event.organizer %}
                                                <form method="post" action="{{ path('app_event_join', {'id': event.id}) }}" style="display: inline-block;">
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="fas fa-user-plus me-1"></i>Rejoindre
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                        {% if is_granted('ROLE_USER') and app.user == event.organizer %}
                                            <form method="post" action="{{ path('app_event_delete_html', {'id': event.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');" 
                                                  style="display: inline-block;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                                <button type="submit" class="btn btn-delete">
                                                    <i class="fas fa-trash-alt me-1"></i>Supprimer
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
