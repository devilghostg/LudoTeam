{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des événements</h1>

        <a href="{{ path('app_event_new') }}" class="btn btn-primary mb-3">Créer un événement</a>

        <div class="row">
            {% for event in events %}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ event.name }}</h5>
                            <p class="card-text">
                                <strong>Date:</strong> {{ event.date ? event.date|date('Y-m-d H:i') : '' }}<br>
                                <strong>Participants max:</strong> {{ event.maxParticipants }}<br>
                                <strong>Description:</strong> {{ event.description }}
                            </p>
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-info">Voir</a>
                            {% if app.user == event.organizer %}
                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning">Modifier</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <p>Aucun événement trouvé.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
