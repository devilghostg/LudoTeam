{% extends 'base.html.twig' %}

{% block title %}Inscription - LudoTeam{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="text-center mb-4">
            <h1 class="h3">Créer un compte</h1>
            <p class="text-muted">Rejoignez la communauté LudoTeam</p>
        </div>

        {% for flash_error in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {% for flash_success in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ flash_success }}</div>
        {% endfor %}

        <div class="card shadow-sm">
            <div class="card-body p-4">
                {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                    {{ form_errors(registrationForm) }}

                    <div class="mb-3">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email) }}
                        <div class="form-text text-danger">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword) }}
                        {{ form_widget(registrationForm.plainPassword) }}
                        <div class="form-text text-danger">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                        <div class="form-text">
                            Le mot de passe doit contenir au moins 6 caractères
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms) }}
                            {{ form_label(registrationForm.agreeTerms) }}
                        </div>
                        <div class="form-text text-danger">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>S'inscrire
                        </button>
                    </div>
                {{ form_end(registrationForm) }}

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-0">Déjà un compte ?</p>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-secondary mt-2">
                        <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                    </a>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <p class="text-muted">
                En vous inscrivant, vous pourrez créer et participer à des événements de jeux de société !
            </p>
        </div>
    </div>
</div>
{% endblock %}