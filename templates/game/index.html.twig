{% extends 'base.html.twig' %}

{% block title %}Jeux - LudoTeam{% endblock %}

{% block body %}
    <!-- Header Section -->
    <section class="game-header full-width-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-4 mb-3">Jeux de société</h1>
                    <p class="lead mb-0">Découvrez notre collection de jeux</p>
                </div>
                <div class="col-md-4 text-md-end">
                    {% if app.user %}
                        <a href="{{ path('app_game_new') }}" class="btn btn-create-game">
                            <i class="fas fa-plus-circle me-2"></i>Ajouter un jeu
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <!-- Filtres -->
            <div class="col-md-3">
                <div class="game-filter">
                    <h4 class="filter-title">Filtres</h4>
                    <form action="{{ path('app_game_index') }}" method="get" id="filterForm">
                        <div class="mb-3">
                            <label class="form-label">Recherche</label>
                            <input type="text" name="search" class="form-control" value="{{ app.request.query.get('search') }}" placeholder="Nom du jeu...">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Disponibilité</label>
                            <select class="form-select" name="availability" onchange="this.form.submit()">
                                <option value="">Tous</option>
                                <option value="available" {% if app.request.query.get('availability') == 'available' %}selected{% endif %}>Disponible</option>
                                <option value="unavailable" {% if app.request.query.get('availability') == 'unavailable' %}selected{% endif %}>Non disponible</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre de joueurs minimum</label>
                            <input type="number" name="min_players" class="form-control" value="{{ app.request.query.get('min_players') }}" min="1">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre de joueurs maximum</label>
                            <input type="number" name="max_players" class="form-control" value="{{ app.request.query.get('max_players') }}" min="1">
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Appliquer les filtres</button>
                    </form>
                </div>
            </div>

            <!-- Liste des jeux -->
            <div class="col-md-9">
                {% if games is empty %}
                    <div class="empty-state">
                        <i class="fas fa-dice"></i>
                        <h3>Aucun jeu trouvé</h3>
                        <p class="text-muted">Modifiez vos filtres ou ajoutez un nouveau jeu</p>
                        {% if app.user %}
                            <a href="{{ path('app_game_new') }}" class="btn btn-create-game mt-3">
                                <i class="fas fa-plus-circle me-2"></i>Ajouter un jeu
                            </a>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="row">
                        {% for game in games %}
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="game-card">
                                    <div class="game-image">
                                        <i class="fas fa-dice"></i>
                                    </div>
                                    <div class="game-info">
                                        <h3 class="game-title">{{ game.name }}</h3>
                                        <div class="game-meta">
                                            <p><i class="fas fa-users"></i> {{ game.minPlayers }} - {{ game.maxPlayers }} joueurs</p>
                                            <p><i class="fas fa-clock"></i> {{ game.duration }} minutes</p>
                                            {% if game.owner %}
                                                <p><i class="fas fa-user"></i> Ajouté par {{ game.owner.email|split('@')[0] }}</p>
                                            {% endif %}
                                        </div>
                                        <div class="game-availability">
                                            {% if game.isAvailable %}
                                                <span class="badge bg-success">Disponible</span>
                                            {% else %}
                                                <span class="badge bg-danger">Non disponible</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="game-actions">
                                        <a href="{{ path('app_game_show', {'id': game.id}) }}" class="btn btn-outline-primary">
                                            <i class="fas fa-info-circle me-2"></i>Voir les détails
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .game-header {
            background: linear-gradient(135deg, #6B48FF 0%, #1E90FF 100%);
            padding: 60px 0;
            color: white;
            margin-bottom: 40px;
        }

        .game-filter {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .filter-title {
            font-size: 1.2rem;
            margin-bottom: 15px;
            color: #333;
        }

        .game-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 30px;
            overflow: hidden;
            border: none;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .game-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .game-image {
            height: 200px;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .game-image i {
            font-size: 4rem;
            color: #6B48FF;
        }

        .game-info {
            padding: 20px;
            flex-grow: 1;
        }

        .game-title {
            font-size: 1.4rem;
            margin-bottom: 15px;
            color: #333;
        }

        .game-meta {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

        .game-meta i {
            margin-right: 5px;
            color: #6B48FF;
        }

        .game-availability {
            margin-bottom: 15px;
        }

        .game-actions {
            padding: 15px 20px;
            background: #f8f9fa;
            border-top: 1px solid #eee;
        }

        .btn-create-game {
            background: linear-gradient(135deg, #6B48FF 0%, #1E90FF 100%);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 25px;
            transition: transform 0.3s ease;
        }

        .btn-create-game:hover {
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 5px 15px rgba(107, 72, 255, 0.3);
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .empty-state i {
            font-size: 3rem;
            color: #6B48FF;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}
